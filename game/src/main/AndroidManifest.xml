<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miso.thegame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".debugStuff.graphics.DebugGraphics"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".Networking.GameActivityMultiplayer"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".gameMechanics.map.levels.NewLevelActivity"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.miso.menu.MultiplayerLobby"
            android:hardwareAccelerated="false"
            android:label="MultiplayerLobby"
            android:screenOrientation="landscape"/>
    </application>

</manifest>
