<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miso.thegame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:hardwareAccelerated="false"
            android:label="aGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".debugStuff.graphics.DebugGraphics"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>


        <activity
            android:name=".GameActivity"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".GameActivitySingleplayer"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".GameActivityMultiplayer"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".gameMechanics.map.levels.NewLevelActivity"
            android:hardwareAccelerated="false"
            android:label="TheGame"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"></activity>



        <activity
            android:name=".PlayerOptions"
            android:hardwareAccelerated="false"
            android:label="PlayerOptions"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".MultiplayerLobby"
            android:hardwareAccelerated="false"
            android:label="MultiplayerLobby"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>
