<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubackground"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp"
    android:weightSum="1"
    android:backgroundTint="#8555"
    android:backgroundTintMode="src_atop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Health"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_decrease_health"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:nestedScrollingEnabled="false"
            android:onClick="decHealth"
            android:text="-" />

        <ProgressBar
            android:id="@+id/health_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_weight="0.36" />

        <Button
            android:id="@+id/button_increase_health"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:onClick="incHealth"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ammo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_decrease_ammo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:onClick="decAmmo"
            android:text="-" />

        <ProgressBar
            android:id="@+id/max_ammo_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_weight="0.36" />

        <Button
            android:id="@+id/button_increase_ammo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:onClick="incAmmo"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Speed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_decrease_speed"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:onClick="decSpeed"
            android:text="-" />

        <ProgressBar
            android:id="@+id/max_speed_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_weight="0.36" />

        <Button
            android:id="@+id/button_increase_speed"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="150px"
            android:maxWidth="150px"
            android:onClick="incSpeed"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_defensive_spell"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Defensive spell" />

        <Button
            android:id="@+id/button_offensive_spell"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Offensive Spell" />
    </LinearLayout>

</LinearLayout>